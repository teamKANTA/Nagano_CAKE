<div class="container">
  <h3 class="d-inline-block px-4 ml-5 orange bg-light"><i class="fas fa-home dark-brown"></i> 配送先編集</h3>
  <%= render 'layouts/error_messages', model: @address_date %>

  <div class="mx-4 mt-3">
    <%= form_with model: @address_date, url: shipping_address_path(@address_date), method: :patch do |f| %>
      <div class="form-group row">
        <%= f.label :郵便番号（ハイフンなし）,  class: "col-3" %>
        <%= f.text_field :postal_code, "placeholder" => "0000000" %>
      </div>
      <div class="form-group row">
        <%= f.label :住所, class: "col-3" %>
        <%= f.text_field :address, class: "col-5", "placeholder" => "東京都渋谷区代々木神園町0-0" %>
      </div>
      <div class="form-group row">
        <%= f.label :宛名, class: "col-3" %>
        <%= f.text_field :name,  "placeholder" => "令和道子" %>
        <%= f.submit "変更内容を保存", class: "btn bg-dark-brown col-2 ml-auto mr-3" %>
      </div>
    <% end %>
  </div>
</div>
