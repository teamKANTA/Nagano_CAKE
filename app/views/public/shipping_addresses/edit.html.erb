<div class="container my-4">
  <h3 class="bg-light d-inline-block px-4 mx-5 mb-5">配送先編集</h3>

  <%= form_with model: @address_date, url: shipping_address_path(@address_date), method: :patch do |f| %>
    <div class="form-group-row d-flex">
      <%= f.label :郵便番号（ハイフンなし）,  class: "col-3" %>
      <div class="col-6">
        <%= f.text_field :postal_code, "placeholder" => "0000000" %>
      </div>
    </div>
    <div class="form-group-row d-flex">
      <%= f.label :住所, class: "col-3" %>
      <div class="col-6">
        <%= f.text_field :address, class: "col-11",  "placeholder" => "東京都渋谷区代々木神園町0-0" %>
      </div>
    </div>
    <div class="form-group-row d-flex">
      <%= f.label :宛名, class: "col-3" %>
      <div class="col-6">
        <%= f.text_field :name,  "placeholder" => "令和道子" %>
      </div>
      <%= f.submit "変更内容を保存", class: "btn btn-success col-2" %>
    </div>
  <% end %>
</div>
