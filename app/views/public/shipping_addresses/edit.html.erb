<div class="container my-4">
  <h3 class="bg-light d-inline-block px-4 mx-5 mb-5">配送先編集</h3>

  <%= form_with model: @address_date, url: shipping_address_path(@address_date), method: :patch do |f| %>
    <div class="form-group-row">
      <%= f.label :郵便番号（ハイフンなし）, class: "col-3" %>
      <%= f.text_field :postal_code %>
    </div>
    <div class="form-group-row">
      <%= f.label :住所, class: "col-3" %>
      <%= f.text_field :address, class: "col-6" %>
    </div>
    <div class="form-group-row">
      <%= f.label :宛名, class: "col-3" %>
      <%= f.text_field :name %>
      <%= f.submit "変更内容を保存", class: "btn btn-success" %>
    </div>
  <% end %>


</div>
