<div class="container">
  <div class="row">
    <div class="col-10">
      <% if @cart_items.present? %>
        <h3 class="bg-light d-inline-block px-4 mx-5">ショッピングカート</h3>
        <div class="btn btn-sm btn-danger">
          <%= link_to "カートを空にする", empty_path, method: :delete %>
        </div>
        <table>
          <thead>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th></th>
          </thead>
          <tbody>
            <% @total_price = 0 %>
            <% @cart_items.each do |cart_item| %>
              <tr>
                <td><%= cart_item.item.get_item_image(30,30) %><%= cart_item.item.name %></td>
                <td><%= cart_item.item.with_tax_price %></td>
                <td>
                  <%= form_with model: cart_item, url: cart_item_path(cart_item), method: :patch do |f| %>
                    <%= f.select :quantity, *[1..10], class: "form-control" %>
                    <%= f.submit "変更", class: "btn btn-sm btn-success" %>
                  <% end %>
                </td>
                <td><%= cart_item.subtotal %></td>
                <% @total_price +=  cart_item.subtotal %>
                <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-sm btn-danger" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <div>
          <%= link_to "買い物を続ける", items_path, class: "btn btn-sm btn-primary" %>
        </div>
        <table>
          <thead>
            <tr>
              <th>合計金額</th>
              <th class="text-right">
                <%= @total_price %>
              </th>
            </tr>
          </thead>
        </table>
        <div>
          <%= link_to "情報入力に進む", orders_path, class: "btn btn-sm btn-success" %>
        </div>
      <% else %>
        <h3 class="bg-light d-inline-block px-4 mx-5">ショッピングカート</h3>
        <p>カートに追加した商品がありません。</p>
      <% end %>
    </div>
  </div>
</div>