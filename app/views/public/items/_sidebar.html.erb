<div class="col-lg-2 offset-lg-1 p-5">
  <table class="table table-borderless border table-hover">
    <thead class="border-bottom text-center">
      <th>ジャンル検索</th>
    </thead>
    <% genres.each do |genre| %>
      <tbody>
        <td>
          <%= link_to genre.name, search_items_path(genre.id), method: :get,class: "text-dark" %>
        </td>
      </tbody>
    <% end %>
  </table>
</div>