<div class="container-fluid my-5">
  <div class="row">
    <%= render "sidebar", genres: @genres %>
    <div class="col-lg-3">
      <%= image_tag @item.get_item_image(350,300) %>
    </div>

    <div class="col-lg-4">
      <div class="row my-2">
        <h2><strong><%= @item.name %></strong></h2>
      </div>
       <div class="row my-4">
        <h4><%= @item.introduction %></h4>
      </div>

      <div class="row my-5">
        <h2>￥<%= @item.with_tax_price.to_s(:delimited) %></h2>
        <p class="pt-2 pl-2">(税込)</p>
      </div>

      <div class="row my-5">
        <% if @item.is_active == true %>
          <%= form_with(model: @cart_item, url: cart_items_path) do |f| %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択", class: "col-sm-5 control-label" %>
            <%= f.submit "カートに入れる", class: "btn btn-success ml-5" %>
        <% end %>

        <% else %>
        <h3>売り切れ中</h3>
        <% end %>
      </div>
    </div>
  </div>
</div>