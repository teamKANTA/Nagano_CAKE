<div class="container my-4">
  <div class="row ml-2">
    <%= render "sidebar", genres: @genres %>

    <div class="col-10">
      <div class="row">
        <div class="col-6">
          <%= image_tag @item.get_item_image(350,300), style: "width: 350px; height: 300px;"  %>
        </div>

        <div class="col-4 ml-2">
          <div class="row my-2">
            <h2 class="bg-light-brown"><strong><%= @item.name %></strong></h2>
          </div>
          <div class="row my-4">
            <h4><%= @item.introduction %></h4>
          </div>

          <div class="row my-4">
            <h2>￥<%= @item.with_tax_price.to_s(:delimited) %></h2>
            <p class="pt-2 pl-2">(税込)</p>
          </div>

          <div class="row mt-4">
            <% if @item.is_active == true %>
              <%= form_with(model: @cart_item, url: cart_items_path) do |f| %>
                <%= f.hidden_field :item_id, value: @item.id %>
                <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択", class: "col-sm-5 control-label" %>
                <%= f.submit "カートに入れる", class: "btn bg-dark-brown ml-5" %>
              <% end %>
            <% else %>
              <h3>売り切れ中</h3>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>