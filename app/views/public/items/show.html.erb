<div class="container-fluid my-5">
  <div class="row">
    <div class="col-lg-2 offset-lg-1">
      <h1>ジャンル一覧が入ります↓</h1>
    </div>
    
    <div class="col-lg-3">
      <%= image_tag @item.get_item_image(300,400) %>
    </div>
    
    <div class="col-lg-4">
      <div class="row my-2">
        <h2><%= @item.name %></h2>
      </div>
       <div class="row my-4">
        <h4><%= @item.introduction %></h4>
      </div>
      
      <div class="row my-5">
        <h3>￥<%= @item.with_tax_price %></h3>
        <p>(税込)</p>
      </div>
      
      <div class="row my-5">
        <% if @item.is_active == true %>
          <%= form_with(model: @cart_item, url: cart_items_path) do |f| %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.select :quantity, options_for_select((1..10).to_a), include_blank: "個数選択" %>
            <%= f.submit "カートに入れる", class: "btn btn-primary" %>
        <% end %>
        
        <% else %>
        <h3>売り切れ中</h3>
        <% end %>
      </div>
    </div>
  </div>
</div>