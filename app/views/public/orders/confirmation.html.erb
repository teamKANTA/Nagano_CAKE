<div class="container">
  <h3 class="d-inline-block px-4 ml-5 orange bg-light"><i class="fas fa-shopping-cart dark-brown"></i> 注文情報確認</h3>

  <div class="container my-4">
    <%= form_with model: @order do |f| %>
    <div class="row mb-4">
      <table class="items col-8 table table-bordered">
        <thead>
          <tr class="bg-light-brown">
            <th col="4">商品名</th>
            <th>単価(税込)</th>
            <th>数量　　</th>
            <th>小計　　</th>
          </tr>
        </thead>
        <tbody>
          <% @cart_items.each do |cart_item| %>
          <tr>
            <th><%= cart_item.item.name %></th>
            <td>￥<%= cart_item.item.with_tax_price.to_s(:delimited) %></td>
            <td><%= cart_item.quantity.to_s(:delimited) %></td>
            <td>￥<%= cart_item.subtotal.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      <table class="price col-3 table table-bordered ml-5">
        <tbody>
          <tr>
            <tr>
              <th class="bg-light-brown">送料</th>
              <td>￥<%= @order.shipping_fee.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th class="bg-light-brown">商品合計</th>
              <td>￥<%= @cart_items_total.to_s(:delimited) %></td>
            </tr>
            <tr>
              <th class="bg-light-brown">請求金額</th>
              <td>￥<%= @order.billing_amount.to_s(:delimited) %></td>
            </tr>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="row mb-4">
      <h4 class="font-weight-bolder mr-5">支払方法</h4>
      <h5><%= f.hidden_field :method_of_payment, value: @order.method_of_payment %>
        <%= @order.method_of_payment_i18n %></h5>
    </div>

    <div class="row mb-4">
      <h4 class="font-weight-bolder mr-5">お届け先</h4>
      <%= f.hidden_field :postal_code, value: @order.postal_code %>
      <%= f.hidden_field :address, value: @order.address %>
      <%= f.hidden_field :name, value: @order.name %>
      <p>〒<%= @order.postal_code %> <%= @order.address %><br>
        <%= @order.name %>
    </div>
    <div class="d-flex justify-content-center">
        <%= f.submit "注文を確定する", class: "btn bg-dark-brown" %>
    </div>
    <% end %>
  </div>
</div>