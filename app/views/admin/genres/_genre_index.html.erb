<div class="row my-5">
  <div class="col-lg-4">
    <table class="table table-borderless table-hover">
      <thead class="bg-light-brown">
        <th>ジャンル</th>
        <th></th>
      </thead>
      <tbody>
        <% genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn bg-dark-brown btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
