<div class="container">
  <%= render "layouts/error_messages", model: @genre%>
  <div class="row">
    <div class="col-xs-12">
      <h5 class="p-3 mb-5 head-line title_h2 text-center bg-light"><strong>ジャンル一覧・追加</strong></h5>
    </div>
  </div>
  
  <div class="col-lg-8">
    <%= form_with model: @genre,url: admin_genres_path, method: :post, local: :true do |f| %>
      <strong><%= f.label :"ジャンル名", class: "col-sm-3 control-label" %></strong>
      <span class="mr-5"><%= f.text_field :name  %></span>
  	  <%= f.submit "新規登録", class: "btn btn-success col-sm-2 " %>
    <% end %>
  </div>
  
  <div class="row my-5">
    <div class="col-lg-4">
      <table class="table table-borderless">
        <thead class="thead-light">
          <th>ジャンル</th>
          <th></th>
        </thead>
        
        <% @genres.each do |genre| %>
          <tbody>
            <td><%= genre.name %></td>
            <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success btn-sm" %></td>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>