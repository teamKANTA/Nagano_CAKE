<div class="container">
  <%= render "layouts/error_messages", model: @genre%>
  <div class="row">
    <div class="col-xs-12">
      <h5 class="p-3 mb-5 head-line title_h2 text-center bg-light"><strong>ジャンル一覧・追加</strong></h5>
    </div>
  </div>

  <div class="col-lg-8">
    <%= form_with model: @genre,url: admin_genre_path do |f| %>
      <strong><%= f.label :"ジャンル名", class: "col-sm-3 control-label" %></strong>
      <span class="mr-5"><%= f.text_field :name  %></span>
  	  <%= f.submit "ジャンル名更新", class: "btn btn-success " %>
    <% end %>
  </div>
</div>