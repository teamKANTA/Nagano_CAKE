<div class="container">
  <h3 class="bg-orange d-inline-block px-4 mx-5 mb-3">ログイン</h3>

  <div class="container mt-4 m-2">

    <div class="log-in">
      <h5 class="bg-orange-dark d-inline-block px-3"> 管理者の方はこちらからログイン </h5>
  
      <div class="form w-75 mx-auto my-4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group row">
            <label for="email" class="col-sm-3 col-form-label">メールアドレス</label>
            <div class="col-sm-9">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", "placeholder" => "sample@example.com" %>
            </div>
          </div>    

          <div class="form-group row">
            <label for="password" class="col-sm-3 col-form-label">パスワード</label>
            <div class="col-sm-9">
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>
          </div>  

          <div class="actions text-center mt-4">
            <%= f.submit "ログイン", class: "btn bg-orange-dark px-5" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>