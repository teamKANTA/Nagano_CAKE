<div class="container my-5">
    <div class="row">
    <div class="col-xs-12">
      <h5 class="pr-3 pl-3 mb-5 head-line title_h2 text-center bg-light"><strong>商品詳細</strong></h5>
    </div>
    </div>
  <div class="row">
    <div class="col-lg-3">
      <%= image_tag @item.get_item_image(350,300) %>
    </div>
    <div class="col-lg-7 offset-lg-2">
      <table class="table table-borderless">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>
        
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        
        <tr>
          <td>税抜価格<br>(税込価格)</td>
          <td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price %>)円</td>
        </tr>
        
        <tr>
          <td>販売ステータス</td>
          <% if @item.is_active == true %>
            <td><p class="text-success">販売中</p></td>
          <% else %>
            <td><p class="text-secondary">販売停止中</p></td>
          <% end %>
        </tr>
      </table>
      <div class="text-center">
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success btn-lg" %>
      </div>
    </div>
  </div>
</div>
